{% extends 'base.html.twig' %}

{% set searching = app.request.query.get("s") %}
{% set filters = app.request.query.get("filter") %}
{% set current_path = app.request.get('_route') %}

{% block title %}Eco IT | Formations{% endblock %}

{% block body %}

<main>

    <h1 class="text-center mt-5 fs-3">{{mainTitle}}</h1>
    <div class="container  mt-5 px-2 px-lg-5">
        <div class="row">
            <div class="col-12">
                <div class="input-group input-group-lg">
                    <span class="input-group-text px-3 px-lg-5"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                      </svg></span>
                    <input type="text" class="form-control" aria-label="Chercher une formation" placeholder="..."
                        aria-describedby="search-courses" id="search-courses">
                        {# <button class="btn text-white rounded-end rounded-1">chercher</button> #}
                    </div>
                </div>
                {% if is_granted("ROLE_STUDENT") %}
                
                <div class="col-8 col-sm-6 col-lg-4 col-xl-3 ms-auto mt-4">

                    <select class="form-select filter-course" aria-label="filtrer formations" id="select-inprogress-completed" >
                        <option selected>&#9947; filtre (Aucun)</option>
                        <option value="inprogress">Formations en cours</option>
                        <option value="completed">Formations termin√©es</option>
                    </select>
                </div>
                {% endif %}
        </div>
    </div>

    {% include "course/_courses.html.twig" %}
<script src="{{asset("js/course.js")}}"></script>
</main>
{% endblock %}