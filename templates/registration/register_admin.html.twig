{% extends 'base.html.twig' %}

{% block title %}Eco IT inscription{% endblock %}

{% block body %}
<main>
    <div class="row">
        <div class="col-11 col-md-8 col-lg-6  col-xl-5 mx-auto mt-4">
            <h1 class="text-center my-4 h2">Inscription</h1>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.user.email) }}
                {{ form_row(registrationForm.user.plainPassword) }}
                <div class="row">
                    <div class="col d-flex justify-content-center align-items-center">
                        {{ form_row(registrationForm.save) }}
                    </div>
                </div>
                {{ form_end(registrationForm) }}
        </div>
    </div>
</main>
{% endblock %}